[user]
    name = Erik Rimskog
    email = erik.rimskog@gmail.com
[pull]
    ff = only
[push]
    autoSetupRemote = true
[fetch]
    recurseSubmodules = on-demand
    parallel = 0
[submodule]
    fetchJobs = 0
[merge]
    conflictstyle = zdiff3
[rerere]
    enabled = true
[init]
    defaultBranch = master
[core]
    autocrlf = input
    quotepath = off
    pager = delta
[interactive]
    diffFilter = delta --color-only
[delta]
    diff-highlight = true
    navigate = true
    navigate-regex = "^@@ [-0-9,+ ]+ @@"
[diff]
    algorithm = histogram
    colorMoved = default
[pretty]
    oneline2 = format:%C(yellow)%h%Creset -%C(auto)%d%Creset %s %Cgreen(%ad) %C(bold blue)<%an>%Creset
[log]
    date = iso
[alias]
    # alias
    alias = !git-alias
    # clone
    cloner = clone --recurse-submodules
    clones = clone --depth=1
    # add
    a = add
    aa = a --all
    au = a --update
    ai = a --intent-to-add
    # clean
    cl = clean -d
    cli = cl -x
    # listing
    lsti = ls-files --cached --ignored --exclude-standard # {ignored & tracked}
    lst = ls-tree --abbrev HEAD # {tracked}
    # branch
    br = branch
    brsu = br -u # {--set-upstream-to}
    bruu = br --unset-upstream
    # rebase [--onto A:-B] B [C:-HEAD] {switch to C -> take (log) B..C -> place on A}
    rb = rebase
    rbc = rb --continue
    rba = rb --abort
    rbs = rb --show-current-patch
    rbi = rb --interactive
    rbm = rbi --keep-base # {= --onto (log) B...C}
    # restore
    re = restore # {tree <- index/HEAD, aka discard changes}
    rei = re --staged # {index <- HEAD, aka unstage}
    reiw = rei --worktree # {tree,index <- HEAD}
    # merge
    me = merge
    mec = me --no-ff
    mef = me --ff-only
    # reset
    rs = reset
    rsh = rs --hard
    rshu = rsh @{upstream}
    # squash
    sq = !: branch && git-squash # <branch-ref>
    sqp = sq --preview # <branch-ref>
    # commit
    co = commit
    coa = co --amend
    coan = coa --no-edit
    # diff [A..B {same as A B} | A...B {same as (merge-base A B) B}]
    d = diff
    dr = d --submodule=diff
    dm = d --submodule=log
    di = d --staged
    # ahead
    ah = !: diff && git-ahead
    # status
    s = status
    si = s --ignored
    ss = s --short --branch
    sr = !git-foreach --all --no-git git-status-brief # [<branch-for-git-ahead>]
    sa = s --untracked-files=all
    # fetch {pull A without switch: origin [+]A:A, + to force fast-forward}
    f = fetch
    fr = f --recurse-submodules=yes
    # pull
    pl = pull
    plr = pl --rebase
    # push
    ps = push
    psd = ps --delete
    psforce = ps --force-with-lease
    # switch
    sw = switch
    swd = sw --detach
    swc = sw --create
    # submodule
    m = submodule
    mu = m update --init --checkout
    muf = mu --force
    mur = mu --recursive
    murf = mur --force
    mr = !git-submodule-rm # [--force|-f] [--] <path>...
    # foreach
    fe = !: reset && git-foreach # [options] [--] <command>...
    feh = !git-foreach --help
    # log [A..B {same as ^A B} | A...B {same as A B ^(merge-base A B)}]
    l = log --boundary --graph --pretty=oneline2 --date=relative
    la = l --all
    lp = l -S # <string> {find commits that removed or added, not moved}
    lpr = lp --pickaxe-regex % # <regex> {all of these are also available for show and diff}
    lg = l -G # <regex> {find commits that removed or added}
    # worktree
    wt = worktree
    wta = wt add
    wtl = wt list
    wtr = wt remove
    # rm
    rmc = rm --cached
