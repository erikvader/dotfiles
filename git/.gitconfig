[user]
    name = Erik Rimskog
    email = erik.rimskog@gmail.com
[pull]
    ff = only
[merge]
    conflictstyle = diff3
[rerere]
    enabled = 1
[init]
    defaultBranch = master
[core]
    quotepath = off
[diff]
    algorithm = histogram
[alias]
    # add
    a = add
    aa = a --all
    au = a --update
    # rebase
    rb = rebase
    rbc = rb --continue
    rba = rb --abort
    rbm = rb --interactive --keep-base
    # restore
    re = restore
    res = re --staged
    resw = res --worktree
    # merge
    me = merge
    mec = me --no-ff
    mef = me --ff-only
    # reset
    rs = reset
    rsh = rs --hard
    rshr = !git-foreach git-display rsh
    # squash
    sq = !git-squash
    # commit
    co = commit
    coa = co --amend
    coan = coa --no-edit
    # clean
    cl = clean
    clr = !git-foreach git-display cl
    # diff
    d = diff
    dr = d --submodule=diff
    ds = d --staged
    # status
    s = status
    sr = !git-foreach git-status-brief
    sa = s --untracked-files=all
    # fetch
    f = fetch
    fr = !git-foreach git-display f
    # pull
    pl = pull
    plr = !git-foreach "'if git-not-detached; then git-display pl; fi'"
    plrf = !git-foreach "'if git-not-detached; then git-display f && git rsh @{upstream}; fi'"
    # push
    ps = push
    psr = !git-foreach "'if git-not-detached; then git-display ps; fi'"
    psforce = ps --force-with-lease
    # switch
    sw = switch
    swr = "!git-foreach \"git-display sw $1 || true\" #"
    swd = sw --detach
    swdr = "!git-foreach \"git-display swd $1 || true\" #"
    swur = "!git-foreach \"if ! git-not-detached; then git-display swd $1 || true; fi\" #"
    # submodule
    m = submodule
    mf = m foreach --recursive
    mu = m update --init --checkout --recursive
    ms = m summary
    # log
    l = log --boundary --graph --pretty='%C(yellow)%h%Creset -%C(auto)%d%Creset %s %Cgreen(%cr) %C(bold blue)<%an>%Creset'
    la = l --all
