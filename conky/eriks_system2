conky.config = {
    alignment = 'top_left',
    background = false,
    border_width = 1,
    cpu_avg_samples = 2,

    draw_borders = false,
    draw_graph_borders = true,
    draw_outline = false,
    draw_shades = false,

    top_name_width = 10,

    use_xft = true,
    font = 'DejaVu Sans Mono:style=bold:size=12',
    gap_x = 50,
    gap_y = 100,
    minimum_height = 5,
    minimum_width = 5,
    net_avg_samples = 2,
    no_buffers = true,
    double_buffer = true,
    out_to_console = false,
    out_to_stderr = false,
    extra_newline = false,

    own_window = true,
    own_window_class = 'Conky',
    own_window_type = 'override',
    own_window_transparent = true,
    -- own_window_colour = 'ffffff',
    -- own_window_argb_visual = true,
    -- own_window_argb_value = 5,
    own_window_hints = 'undecorated,below,sticky,skip_taskbar,skip_pager',

    short_units = true,

    stippled_borders = 0,
    update_interval = 1.0,
    uppercase = false,
    use_spacer = 'left',
    show_graph_scale = false,
    show_graph_range = false,

    -- minimum_width = 450,
    -- minimum_size = 280,

    -- border_inner_margin = 50,

    default_outline_color = 'white',
    default_shade_color = 'white',

    default_color = 'FG_COLOR',
    color0 = 'FG_COLOR',
    color1 = 'FG_COLOR'
}

conky.text = [[
ifelse(BG_PATH, `', `', ${image BG_PATH -p -5`,'0}
)dnl
# ${scroll 30 $nodename - $sysname $kernel on $machine | }
# $hr
# ${color}Uptime:$color $uptime
# ${color}Swap Usage:$color $swap/$swapmax - $swapperc% ${swapbar 4}
${alignc}$kernel
${alignc}${uptime}
$hr
 $color1/$color       $color${fs_used_perc /}%$color1/$color${fs_size /} ${fs_bar 6 /}
 ${color1}home    $color${fs_used_perc /home}%$color1/$color${fs_size /home} ${fs_bar 6 /home}
 ${color1}3TB     $color${fs_used_perc /media/3TB}%$color1/$color${fs_size /media/3TB} ${fs_bar 6 /media/3TB}
 ${color1}freecom $color${fs_used_perc /media/freecom}%$color1/$color${fs_size /media/freecom} ${fs_bar 6 /media/freecom}
$hr
${color1}ip: $color${addr enp4s0}${alignr}DNS: ${nameserver 0}
${color1}Up:$color ${upspeed enp4s0}${color}${alignr}${color1}Down:$color ${downspeed enp4s0}
${color}Total: ${totalup enp4s0}${alignr}Total: ${totaldown enp4s0}
$hr
${color}Processes: $processes
${color}${alignc}${cpugauge cpu1 30,50}  ${cpugauge cpu2 30,50}  ${cpugauge cpu3 30,50}  ${cpugauge cpu4 30,50}  ${cpugauge cpu5 30,50}  ${cpugauge cpu6 30,50}
${color1} Name          CPU% | Name          MEM%$color
${color} ${top name 1} ${top cpu 1} | ${top_mem name 1} ${top_mem mem 1}
${color} ${top name 2} ${top cpu 2} | ${top_mem name 2} ${top_mem mem 2}
${color} ${top name 3} ${top cpu 3} | ${top_mem name 3} ${top_mem mem 3}
${color} ${top name 4} ${top cpu 4} | ${top_mem name 4} ${top_mem mem 4}
${color} ${top name 5} ${top cpu 5} | ${top_mem name 5} ${top_mem mem 5}
]]
