!Shift+escape = Caps_lock
!Shift+caps_lock = caps_lock ?!
!Caps_Lock    = Control_L
clear lock
clear control
remove mod4 = Hyper_L
keycode 66 = Control_L
keycode 9 = Escape Caps_Lock
keycode 105 = Hyper_L
!keycode any = Escape
keycode any = Control_R
add control = Control_L Control_R
add mod3 = Hyper_L

