set nocompatible

set autoindent
set expandtab
set tabstop=8
set softtabstop=4
set shiftwidth=4
set smarttab
set shiftround

filetype plugin indent on

set noerrorbells
set laststatus=2

set wrap
set textwidth=90

set ruler
syntax on

set encoding=utf-8

set matchpairs+=<:>

set hlsearch
set incsearch
set ignorecase
set smartcase
set showmatch
nnoremap <BS> :let @/=''<cr>

set listchars=tab:t>
set list

set background=dark

set formatoptions+=j
set history=1000
