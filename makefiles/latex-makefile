name=

.PHONY: all
all: $(name).pdf

.PHONY: force
force:
	touch $(name).tex
	$(MAKE) --no-print-directory all

$(name).pdf: $(name).tex
	pdflatex -interaction=nonstopmode $<
	pdflatex -interaction=nonstopmode $<

.PHONY: show
show: $(name).pdf
	zathura $< &>/dev/null &

.PHONY: clean
clean:
	-rm -f $(name).aux
	-rm -f $(name).log
	-rm -f $(name).out
	-rm -f $(name).toc
	-rm -f $(name).pdf
